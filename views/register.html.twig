{% extends "BaseTemplate.html.twig" %}
{% block lien %}
    <link rel="stylesheet" href="../www/css/main.css" />
{% endblock %}
{% block title %}Connexion{% endblock %}
{% block h1 %}
    <h1>Inscription</h1>
{% endblock %}
{% block content %}
    <p><i>Vous êtes ici</i> : <a href="/www/">Index du forum</a> --> Enregistrement
	<form method="post" enctype="multipart/form-data" action="/www/register/redirect">
	   <fieldset><legend>Identifiants</legend>
            <label for="pseudo">* Pseudo :</label>  <input name="pseudo" type="text" id="pseudo" /> (le pseudo doit contenir entre 3 et 15 caractères)<br><br>
            <label for="password">* Mot de Passe :</label><input type="password" name="password" id="password"  /><br><br>
            <label for="confirm">* Confirmer le mot de passe :</label><input type="password" name="confirm" id="confirm" /><br>
        </fieldset>
        <fieldset><legend>Contacts</legend>
            <label for="email">* Votre adresse Mail :</label><input type="text" name="email" id="email"><br><br>
            <label for="website">Votre site web :</label><input type="text" name="website" id="website" /><br>
        </fieldset>
        <fieldset><legend>Informations supplémentaires</legend>
            <label for="localisation">Localisation :</label><input type="text" name="localisation" id="localisation" /><br>
        </fieldset>
        <fieldset><legend>Profil sur le forum</legend>
            <label for="avatar">Choisissez votre avatar :</label><input type="file" name="avatar" id="avatar" />(Taille max : 10Ko)<br><br>
            <label for="description">Description :</label><textarea cols="40" rows="4" name="description" id="description" placeholder="Votre description est limitée à 200 caractères"></textarea><br>
	   </fieldset>
        <p>Les champs précédés d un * sont obligatoires</p><br>
        <p><input type="submit" value="S'inscrire" /></p><br>
    </form>
{% endblock %}